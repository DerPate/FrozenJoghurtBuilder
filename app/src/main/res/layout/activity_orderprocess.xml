<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:elevation = "2dp">

    <include
        android:id="@+id/app_header"
        layout="@layout/app_header">

    </include>

    <frozenyogurtbuilder.app.classes.external.CustomListView
        android:id="@+id/orderprocess_listview"
        android:layout_width="match_parent"
        android:layout_height="405dp"
        android:layout_marginTop="8dp" />

    <ImageButton
        android:id="@+id/btn_goTo_orderFinal"
        android:layout_width="48dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:elevation="3dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_playlist_add_check_black_24dp" />

    <ImageButton
        android:id="@+id/btn_addMain"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="49dp"
        android:layout_marginStart="23dp"
        android:background="@drawable/buttonshape"
        android:elevation="2dp"
        android:padding="40px"
        android:scaleType="centerInside" />

    <ImageButton
        android:id="@+id/btn_addSauce"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_addMain"
        android:layout_marginEnd="14dp"
        android:background="@drawable/buttonshape"
        android:elevation="2dp"
        android:padding="40px"
        android:scaleType="centerInside" />

    <ImageButton
        android:id="@+id/btn_addTopping"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/btn_addMain"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonshape"
        android:elevation="2dp"
        android:padding="40px"
        android:scaleType="centerInside" />

</RelativeLayout>
