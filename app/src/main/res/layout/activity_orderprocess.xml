<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <include
        android:id="@+id/app_header"
        layout="@layout/app_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </include>

    <frozenyogurtbuilder.app.classes.external.CustomListView
        android:id="@+id/orderprocess_listview"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/app_header" />

    <ImageButton
        android:id="@+id/btn_goTo_orderFinal"
        android:layout_width="48dp"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:elevation="3dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/app_header"
        app:layout_constraintEnd_toEndOf="@+id/app_header"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_playlist_add_check_black_24dp" />

    <ImageButton
        android:id="@+id/btn_addMain"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/buttonshape"
        android:elevation="2dp"
        android:padding="40px"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cupcake" />

    <ImageButton
        android:id="@+id/btn_addSauce"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/buttonshape"
        android:elevation="2dp"
        android:padding="40px"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ketchup" />

    <ImageButton
        android:id="@+id/btn_addTopping"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/buttonshape"
        android:elevation="2dp"
        android:padding="40px"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_addSauce"
        app:layout_constraintStart_toEndOf="@+id/btn_addMain"
        app:srcCompat="@drawable/nuts" />

    <TextView
        android:id="@+id/textView_mainCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/rounded_shape"
        android:elevation="2dp"
        android:fontFamily="@font/opensans_regular"
        android:text="0/3"
        android:textColor="@color/colorBase"
        app:layout_constraintBottom_toBottomOf="@+id/btn_addMain"
        app:layout_constraintEnd_toEndOf="@+id/btn_addMain"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_addMain"
        app:layout_constraintTop_toTopOf="@+id/btn_addMain"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
